> set.seed(290875)
> n <- 100000
> df <- rpois(1,1/rexp(1,1))+1
> dim <- rpois(1,runif(1,0,10))+2
> mn <- rnorm(dim,0,4) ##rep(0,dim)
> sigma <- matrix(runif(dim^2,-1,1), nrow = dim, ncol = dim)
> sigma <- crossprod(sigma)+diag(dim)
> d <- runif(dim, 0.3, 20)
> sigma <- diag(d)%*%sigma%*%diag(d)
> corrMat <- cov2cor(sigma)
> 
> ## sigma handed over
