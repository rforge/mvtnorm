> library("mvtnorm")
> 
> set.seed(1)
> dim <- 10
> df <- 5
> 
> D <- diag(dim)+crossprod(matrix(runif(25,-1,1),dim,dim))
> corr <- cov2cor(D)
> 
> ## one-sided, lower tail
> qu <- qmvt(0.95, df=df, corr=corr)$quantile
> pmvt(lower=rep(-Inf, dim), upper=rep(qu,dim), corr=corr, df=df)
